<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/primaryCharade</item>
        <item name="android:fontFamily">@font/avenir_book</item>
    </style>

    <style name="AppBarTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThemeOverlay.AppBarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#6a6f6e</item>
    </style>

    <style name="MenuItemsText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CheckInToolbarText" parent="@style/Theme.AppCompat">
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">@dimen/tool_bar_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:actionOverflowButtonStyle">@style/overFlowMenu</item>
    </style>

    <style name="overFlowMenu" parent="@style/Theme.AppCompat">
        <item name="android:fillColor">@color/white</item>
    </style>

    <style name="DisplayNameText" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
    </style>

    <style name="EmailText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:textColor">@color/EmailTextAlpha</item>
    </style>
    <style name="SerialTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowActionBar"> true</item>
    </style>

</resources>
