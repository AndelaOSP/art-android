<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="#EEEEEE">
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/header_image">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="@string/name"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="normal"
        android:layout_alignBottom="@id/ivPhoto"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_margin="10dp"
        card_view:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_computer_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/serial_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serial_number"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serial_title"
                        android:textColor="#939393"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cohort_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cohort_number"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/cohort_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cohort"
                        android:textColor="#939393" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/email_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mail"
                        android:textColor="#939393" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/checkinButton"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:background="@color/checkInButton"
        android:text="@string/checkin"
        android:layout_below="@id/card_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="visible"/>
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:layout_alignBaseline="@+id/checkinButton"
        android:layout_alignBottom="@+id/checkinButton"
        android:layout_alignLeft="@+id/checkinButton"
        android:layout_alignStart="@+id/checkinButton"
        android:background="@color/checkOutButton"
        android:text="@string/check_out"
        android:visibility="invisible" />

    </RelativeLayout>
</layout>
