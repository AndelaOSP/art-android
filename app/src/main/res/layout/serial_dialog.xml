<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:paddingLeft="24dp"
    android:background="@android:color/white"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:textColor="@color/dialog_text_view"
        android:text="@string/enter_text"
        android:background="@android:color/white"
        />

    <EditText
        android:id="@+id/serial_edit_text"
        android:layout_width="@dimen/dialog_edit_text_width"
        android:layout_height="@dimen/dialog_edit_text_height"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/dialog_tint"
        />
    <Button
        android:id="@+id/cancel"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_button_height"
        android:background="@android:color/transparent"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="115dp"
        android:text="Cancel"
        android:textColor="@color/dialog_tint"
        android:fontFamily="@font/avenir_medium"
        />
    <Button
        android:id="@+id/submit"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_height="@dimen/dialog_edit_text_height"
        android:background="@android:color/transparent"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="207dp"
        android:layout_marginBottom="16dp"
        android:text="Submit"
        android:textColor="#35ccc8"
        android:fontFamily="@font/avenir_medium"
        />

</android.support.design.widget.CoordinatorLayout>
</layout>